def xorOfArray(a, n, d,sum,sum1): 
    for i in a :
        sum +=i
    for j in a:
        if j not in u:
            u.append(j)
    for k in u:
        sum1+=k
      
    E = (d*sum1 - sum) // (d-1)
    return E
        




t = int(input())
for i in range(t):
    nd = input().split()

    n = int(nd[0])

    d = int(nd[1])
    u = []

    a = list(map(int, input().rstrip().split()))
    print(xorOfArray(a, n, d,0,0))
    
