def leftRot(a,d):
    for i in range(d):
        d = a.pop(0)
        a.append(d)
    for i in a:
        b.append(str(i))
    return b

if __name__ == '__main__':
    nd = input().split()

    n = int(nd[0])
    b = []

    d = int(nd[1])

    a = list(map(int, input().rstrip().split()))
